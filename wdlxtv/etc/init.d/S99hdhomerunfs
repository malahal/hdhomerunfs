mountpoint="/tmp/media/usb/HDHOMERUN_LiveTV"
if [ ! -d "$mountpoint" ]; then
	mkdir -p "$mountpoint"
fi

case "$1" in
	start)
		eval $(grep HDHOMERUN_SAVE_FILE= /conf/config)
		dir=$(dirname $(dirname $(command -v hdhomerunfs)))
		[ -n "$dir" ] && [ -n "$HDHOMERUN_SAVE_FILE" ] && hdhomerunfs "$HDHOMERUN_SAVE_FILE" "$dir/conf/hdhomerunfs.ini" "$mountpoint"
		;;
	stop)
		umount $mountpoint
		;;
esac
